<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cadastrar Maratona "
            android:textColor="#1A1F71"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1A1F71"
            android:hint="Nome Completo" />

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1A1F71"
            android:hint="Endereco" />

        <EditText
            android:id="@+id/edtData_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data inicial"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp"
            android:inputType="text|date" />

        <EditText
            android:id="@+id/edtData_F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data Final"
            android:inputType="text|date" />

        <EditText
            android:id="@+id/edtDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="Distancia"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="Descricao"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/edtLimite_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="limite de Participantes"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtRegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="Regras"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="Valor"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/edtTipoTerreno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="Tipo de Terreno"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtClimaEsperado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1A1F71"
            android:hint="Clima Esperado"
            android:inputType="text" />

        <Button
            android:id="@+id/btnCadastrarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A3E635"
            android:onClick="CadastrarMaratonas"
            android:text="Cadastrar"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="244dp"
            android:layout_height="268dp"
            android:paddingTop="100px"
            app:srcCompat="@drawable/logomaratona" />
    </LinearLayout>
</ScrollView>