<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ImgBackground"
    tools:context=".TelaHub">


    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="442dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="83dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right|center_horizontal|center_vertical"
            android:baselineAlignBottom="false"
            android:onClick="Editar_Usuario"
            android:src="@drawable/icone"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/edtHubUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_medium"
            android:text="HUB de UsuÃ¡rio"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnVisualizarMaratonaAbertas"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/raleway_bold"
            android:onClick="Maratonas_Abertas"
            android:padding="12dp"
            android:text="Visualizar Maratonas Abertas"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnVisualizarMaratonasInscritas"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/raleway_bold"
            android:onClick="Maratonas_Inscritas"
            android:padding="12dp"
            android:text="Visualizar Maratonas Inscritas"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnVisualizarMaratonaConcluidas"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/raleway_bold"
            android:onClick="Maratonas_Concluidas"
            android:padding="12dp"
            android:text="Visualizar Maratonas Concluidas"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>