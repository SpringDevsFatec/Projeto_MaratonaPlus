            android:text="Visualizar Maratonas Abertas"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnVisualizarMaratonaAberta"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A3E635"
            android:text="Visualizar Maratonas Inscritas"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnVisualizarMaratonaInscrita"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A3E635"
