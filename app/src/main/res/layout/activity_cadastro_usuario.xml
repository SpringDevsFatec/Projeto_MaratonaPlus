<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="TrocaAdm"
    android:background="@drawable/bglogo"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:text="Área de Cadastro "
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:onClick="Troca"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbEmpresa"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/raleway_medium"
                android:onClick="TrocaAdm"
                android:text="Empresa"
                android:textColor="#000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rdbRunner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:onClick="TrocaCorredor"
                android:text="Corredor"
                android:textColor="#000"
                android:textStyle="bold" />
        </RadioGroup>

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="12dp"
            android:hint="Nome Completo" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="E-mail"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Cpf"
            android:inputType="number"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:padding="12dp"
            android:hint="Cnpj"
            android:inputType="number"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtOrigem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Pais de Origem"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Telefone"
            android:inputType="number"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Endereco"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnCadastrarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/raleway_bold"
            android:textSize="20sp"
            android:padding="12dp"
            android:onClick="Cadastrar"
            android:text="Cadastrar"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="244dp"
            android:layout_height="268dp"
            android:paddingTop="100px"
            android:visibility="gone"
            app:srcCompat="@drawable/logomaratona" />
    </LinearLayout>
</ScrollView>


