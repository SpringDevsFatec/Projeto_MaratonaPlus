<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogo"
    tools:context=".TelaAdm">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="83dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right"
            android:baselineAlignBottom="false"
            android:onClick="Editar_Empresa"
            android:src="@drawable/icone"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/edtTelaAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_medium"
            android:text="Tela de ADM"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAdmCadastrarMaratona"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1A1F71"
            android:fontFamily="@font/raleway_bold"
            android:onClick="Criarmaratona"
            android:padding="12dp"
            android:text="Cadastrar Maratona"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAdmVisualizarMaratona"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1A1F71"
            android:fontFamily="@font/raleway_bold"
            android:onClick="Visualizarmaratona"
            android:text="Visualizar Maratonas Criadas"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>