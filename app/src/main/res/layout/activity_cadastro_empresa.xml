<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogo"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Empresa"
            android:textSize="24sp"
            android:textColor="#1A1F71"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!-- Nome da Empresa -->
        <EditText
            android:id="@+id/edtNomeEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Empresa"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="20dp" />

        <!-- Telefone -->
        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- E-mail -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- Usuário -->
        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuário"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- Senha -->
        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- CNPJ -->
        <EditText
            android:id="@+id/edtCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNPJ"
            android:inputType="number"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- Localização -->
        <EditText
            android:id="@+id/edtLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Localização"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- URL do Logo -->
        <EditText
            android:id="@+id/edtUrlLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL do Logo"
            android:inputType="textUri"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- Data de Criação -->
        <EditText
            android:id="@+id/edtDataNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Criação (DD/MM/AAAA)"
            android:inputType="date"
            android:backgroundTint="#1A1F71"
            android:layout_marginTop="10dp" />

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/btnCadastrarEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Empresa"
            android:backgroundTint="#A3E635"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="244dp"
            android:layout_height="268dp"
            android:paddingTop="100px"
            android:visibility="gone"
            app:srcCompat="@drawable/logomaratona" />
    </LinearLayout>
</ScrollView>
