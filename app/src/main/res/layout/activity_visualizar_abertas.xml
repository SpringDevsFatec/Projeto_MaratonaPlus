<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogo"
    tools:context=".VisualizarAbertas">

  <LinearLayout
      android:layout_width="409dp"
      android:layout_height="729dp"
      android:layout_marginStart="1dp"
      android:layout_marginTop="1dp"
      android:layout_marginEnd="1dp"
      android:layout_marginBottom="1dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A3E635"
        android:text="Maratonas Abertas"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgConcluidas"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        app:srcCompat="@drawable/maratona_cartoon" />

    <ListView
        android:id="@+id/listabertas"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    <ImageView
        android:id="@+id/logoConcluidas"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        app:srcCompat="@drawable/logomaratona" />

  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>