<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center|center_vertical"
            android:textColor="@color/escura"
            android:text="Obrigado pela sua Participação!"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="362dp"
            android:layout_height="219dp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:srcCompat="@drawable/medalha" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:text="Resultados"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Campo ID Participação -->
        <TextView
            android:id="@+id/idPartipacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Id Participação: "/>

        <!-- Campo ID Inscrição -->
        <TextView
            android:id="@+id/idInscricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Id Inscrição: "/>


        <TextView
            android:id="@+id/statusConclusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Status de Conclusao: "/>

        <TextView
            android:id="@+id/tempoRegistrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Tempo Registrado: " />

        <TextView
            android:id="@+id/tempoInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Tempo Início: " />

        <TextView
            android:id="@+id/tempoFim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Tempo Fim: " />

        <TextView
            android:id="@+id/velocidadeKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Velocidade em Km/h: " />

        <TextView
            android:id="@+id/velocidadeMs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Velocidade em Ms/h: " />

        <TextView
            android:id="@+id/passos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:textColorHint="#000000"
            android:hint="Passos Dados: " />
    </LinearLayout>
</ScrollView>
