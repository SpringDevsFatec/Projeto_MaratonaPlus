<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ImgBackground"
    tools:context=".EditarMaratona">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:textColor="#000"
                android:text="Atualizar Maratona " />


            <TextView
                android:id="@+id/txtIdMaratona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/raleway_bold"
                android:text="ID da Maratona:" />


                        <EditText
                            android:id="@+id/edtId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edit_text_maratona"
                            android:fontFamily="@font/raleway_medium"
                            android:padding="12dp"
                            android:layout_marginTop="5dp"
                            android:hint="Id da Maratona"
                            android:inputType="none"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Status da Maratona:" />


            <EditText
                android:id="@+id/edtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Status"
                android:focusable="false"
                android:focusableInTouchMode="false" />/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Nome Comercial da Maratona:" />


            <EditText
                android:id="@+id/edtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Nome Completo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Endereco da Maratona:" />

            <EditText
                android:id="@+id/edtLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Endereco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Data de inicio da Maratona:" />

            <EditText
                android:id="@+id/edtData_I"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data inicial"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:focusable="true"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginTop="5dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Data de Final das Inscrições para Maratona:" />


            <EditText
                android:id="@+id/edtData_F"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data Final"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:focusable="true"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Kilometros da Maratona:" />

            <EditText
                android:id="@+id/edtDistancia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Distancia"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Descrição da Maratona:" />


            <EditText
                android:id="@+id/edtDescricao"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Descricao"
                android:inputType="textMultiLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="limete de participantes da Maratona:" />


            <EditText
                android:id="@+id/edtLimite_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="limite de Participantes"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Regras da Maratona:" />

            <EditText
                android:id="@+id/edtRegras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Regras"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Valor da Inscricao para Maratona:" />


            <EditText
                android:id="@+id/edtValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Valor"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Tipo de Terreno da Maratona:" />


            <EditText
                android:id="@+id/edtTipoTerreno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Tipo de Terreno"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Clima Esperado da Maratona:" />


            <EditText
                android:id="@+id/edtClimaEsperado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_maratona"
                android:fontFamily="@font/raleway_medium"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:hint="Clima Esperado"
                android:inputType="text" />

            <Button
                android:id="@+id/btnCadastrarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#000000"
                android:fontFamily="@font/raleway_bold"
                android:onClick="AtualizarMaratona"
                android:padding="12dp"
                android:text="Atualizar"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="244dp"
                android:layout_height="268dp"
                android:paddingTop="100px"
                android:visibility="gone"
                app:srcCompat="@drawable/logomaratona" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>