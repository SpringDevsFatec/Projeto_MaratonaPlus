<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaMaratona"
    style="@style/ImgBackground"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txtTituloMaratona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:hint="Nome da Maratona"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescricaoMaratona"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:hint="Informações sobre a maratona..."
            android:textColorHint="#B1B1B1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtlocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Local: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtDataIncial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Data de Inicio: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtDataFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Data de final: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Status: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Distancia: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtRegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Regras: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtTipoT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Tipo de terreno: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtClimaEsperado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Clima Esperado: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Valor: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtIdmaratona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_edit_text_maratona"
            android:fontFamily="@font/raleway_medium"
            android:hint="Id Maratona: "
            android:padding="5dp"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/txtEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Criadora: "
            android:padding="5dp"
            android:textColorHint="#000000"
            android:background="@drawable/rounded_edit_text_maratona"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/raleway_medium"/>

        <Button
            android:id="@+id/btnInscrever"
            android:layout_width="match_parent"
            android:maxWidth="320dp"
            android:onClick="Inscrever"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_height="65dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text"
            android:backgroundTint="#A3E635"
            android:text="Inscrever-se" />

        <TextView
            android:id="@+id/txtForma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forma de Pagamento:"
            android:visibility="gone" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rdbBoleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Boleto"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rdbCartao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Cartão"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rdbPix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pix"
                android:visibility="gone" />
        </RadioGroup>

        <Button
            android:id="@+id/btnIniciarCorrida"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text"
            android:backgroundTint="#A3E635"
            android:onClick="iniciarMaratona"
            android:text="Participar da Maratona" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtParticipantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Lista de Participantes: " />

            <ListView
                android:id="@+id/listaParticipantes"
                android:layout_width="match_parent"
                android:layout_height="260dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>