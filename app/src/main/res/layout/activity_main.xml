<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wppa">

    <!-- Contêiner centralizado com fundo #F2F2F2 -->
    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="286dp"
        android:layout_centerInParent="true"
        android:background="@drawable/borda"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Logo do app -->

        <!-- Botão para avançar -->
        <ImageView
            android:layout_width="145dp"
            android:layout_height="127dp"
            android:contentDescription="Logo do aplicativo"
            android:src="@drawable/logomaratona" />

        <TextView
            android:id="@+id/txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Maratona+"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btnAvancarLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A3E635"
            android:onClick="Iniciar"
            android:text="Avançar"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
