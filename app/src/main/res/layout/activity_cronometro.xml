<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogo"
    tools:context=".Cronometro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="352dp"
            android:layout_height="176dp"
            android:layout_gravity="center|center_vertical"
            android:foregroundGravity="center_horizontal"
            app:srcCompat="@drawable/cronometro" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="000:00:00"
        android:textSize="60sp"
        android:textColor="@color/escura"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Desiste"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="CancelarParticipacao"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text2"
            android:capitalize="none"
            android:fontFamily="@font/raleway_extrabold"
            android:text="Desistir da Maratona" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/stop"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:enabled="true"
            android:onClick="onClick"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text"
            android:backgroundTint="#A3E635"
            android:capitalize="none"
            android:fontFamily="@font/raleway_extrabold"
            android:text="Finalizar Maratona" />



    </LinearLayout>

</RelativeLayout>